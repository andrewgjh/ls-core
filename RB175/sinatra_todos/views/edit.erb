<section id='todos'>
<header>
  <h2>Editing '<%= @name%>'</h2>
  <ul>
   <li> 
    <form action="/lists/<%= @name%>/destroy" method='post'>
      <button class='delete' type='submit'>Delete List</button>
    </form>
   </li>
  </ul>
</header>
</section>

<form action="/lists/<%= @name%>/edit" method='post'>
  <dl>
    <dt>
      <label for='new_name'>Enter the new name for your list:</label>
    </dt>
    <dd>
      <input name='new_name' placeholder="List Name" type='text' value=<%= params[:new_name] || @name %>>
    </dd>
  </dl>
  <fieldset class='actions'>
    <input type='submit' value="Save">
    <a href='/lists/<%= @name%>'> Cancel</a>
  </fieldset>
</form>

<% content_for :header_links do %>
  <a class='list' href="/lists">All Lists</a>
<% end %>


      